                        +product('./assets/imgs/product.jpg','Парикмахерское кресло «Норм» гидравлическое','9 900 ₽ ')
                        +product('./assets/imgs/product.jpg','Парикмахерское кресло «Норм» гидравлическое','9 900 ₽ ')
            section.forms 
                .container.forms__container
                    mixin form(ftitle, ftext, fimg, btmTrue)
                        .form
                            .form__left
                                .form__title=ftitle
                                .form__text=ftext
                                .form__bottom
                                    - if(btmTrue)
                                        button.btn.form__btn Карта магазинов 
                                    - else 
                                        input(class="form__input" type="text" placeholder="Введите e-mail")
                            .form__right 
                                .form__img
                                    img(src=fimg, alt="")
                    +form('Получайте бонусы и подарки','Каждый месяц разыгрываем 10 000 рублей для наших клиентов','./assets/imgs/leater.svg', false)
                    +form('Заходите к нам','Более 300 магазинов по всей России','./assets/imgs/car.svg', true)
            section.impuls 
