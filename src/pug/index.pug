        main.main 
            section.baner 
                .container.baner-container
                    .baner__title Супер кресло
                    .baner__text Текст акции всегда отражает суть, а не просто болтовню, поэтому внимательнее
                    button.baner__btn Подробнее
            section.second 
                .container 
                    .second__title Специальное предложение
                    .second__row 
                        mixin product(vimg, vtitle, vprice)
                            .second__col 
                                .product
                                    .product__img 
                                        img(src=vimg, alt="product")
                                    .product__title=vtitle 
                                    .product__price=vprice
                                    .product__btn 
                                        a(href="#").btn-link Купить
                        +product('./assets/imgs/product.jpg','Парикмахерское кресло «Норм» гидравлическое','9 900 ₽ ')
